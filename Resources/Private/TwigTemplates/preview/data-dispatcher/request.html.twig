<h3>Data Dispatcher Preview ({{ keyword }})</h3>

<div>
    <h4>HTTP request config</h4>
    <div>
        <table class="table table-striped">
            <tbody>
            <tr>
                <td>URL</td>
                <td>{{ url }}</td>
            </tr>
            <tr>
                <td>Method</td>
                <td>{{ method }}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

{% if headers is not empty %}
    <div>
        <h4>Headers</h4>
        <div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Value</th>
                </tr>
                </thead>
                <tbody>
                {% for key, value in headers %}
                    <tr>
                        <td>{{ key }}</td>
                        <td>{{ value }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}

{% if cookies is not empty %}
    <div>
        <h4>Cookies</h4>
        <div>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Value</th>
                </tr>
                </thead>
                <tbody>
                {% for key, value in cookies %}
                    <tr>
                        <td>{{ key }}</td>
                        <td>{{ value }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}

<div>
    <h4>Data</h4>
    <div>
        {% include 'preview/data-table.html.twig' %}
    </div>
</div>
